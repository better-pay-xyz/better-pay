{
  "name": "better-pay",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter='@better-pay/*' dev",
    "dev:checkout": "cd apps/checkout && bun run dev",
    "dev:dashboard": "cd apps/dashboard && bun run dev",
    "dev:api": "cd apps/api && bun run dev",
    "build": "bun run --filter='@better-pay/*' build",
    "test": "bun test",
    "db:generate": "cd packages/database && bun run generate",
    "db:migrate": "cd packages/database && bun run migrate",
    "db:studio": "cd packages/database && bun run studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
